#!/usr/bin/env bash
# displays the time for 12 hours and 59 minutes
# displays hours from 0 to 12
# displays minutes from 1 to 59
# uses the while loop

minutes=1
hours=0

while [ $hours -lt 13 ];
do
	echo "Hour: $hours"
	while [ $minutes -lt 60 ];
	do
		echo "$minutes"
		((minutes++))
	done
	minutes=1
	((hours++))
done


